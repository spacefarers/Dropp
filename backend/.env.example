# Core
MONGODB_URI=mongodb+srv://...
MONGO_DB=dropp

# Firebase Admin (service account as base64)
FIREBASE_SERVICE_ACCOUNT_BASE64=...

# Firebase Client (public web config)
NEXT_PUBLIC_FIREBASE_API_KEY=...
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=...
NEXT_PUBLIC_FIREBASE_PROJECT_ID=...
NEXT_PUBLIC_FIREBASE_APP_ID=...

# Dropp session token signing
JWT_SECRET_KEY=some-long-random-string

# Desktop deep-link fallback
NEXT_PUBLIC_APP_REDIRECT_URI=dropp://auth/callback

# Optional CORS for desktop/web origins calling /api (comma separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://app.yourdomain.com

# Vercel Blob â€“ automatically injected on Vercel when Blob is enabled
BLOB_READ_WRITE_TOKEN=...

# Local dev for Vercel Blob webhooks (optional)
# VERCEL_BLOB_CALLBACK_URL=https://<your-ngrok-subdomain>.ngrok-free.app
